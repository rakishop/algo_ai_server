{
  "base_url": "http://localhost:8000",
  "endpoints": {
    "ai_trade_decision": {
      "method": "POST",
      "path": "/api/v1/ai/trade-decision",
      "required_params": ["tradingSymbol"],
      "optional_params": {
        "timeInterval": 15,
        "lookbackPeriod": 50,
        "analysisDepth": "comprehensive"
      },
      "response_fields": ["decision", "confidence", "ml_score", "current_price", "reasons"]
    },
    "multi_stock_analysis": {
      "method": "POST", 
      "path": "/api/v1/ai/multi-stock-decision",
      "required_params": ["symbols"],
      "optional_params": {
        "timeInterval": 15,
        "topN": 10
      },
      "response_fields": ["top_buy_recommendations", "top_sell_recommendations", "market_overview"]
    },
    "market_scanner": {
      "method": "GET",
      "path": "/api/v1/scanner/comprehensive",
      "required_params": [],
      "optional_params": {},
      "response_fields": ["opportunities", "market_overview", "summary"]
    },
    "portfolio_create": {
      "method": "POST",
      "path": "/api/v1/portfolio/create",
      "required_params": ["portfolio_id", "name", "capital"],
      "optional_params": {
        "risk_tolerance": "MEDIUM"
      },
      "response_fields": ["status", "portfolio"]
    },
    "portfolio_performance": {
      "method": "GET",
      "path": "/api/v1/portfolio/{portfolio_id}/performance",
      "required_params": ["portfolio_id"],
      "optional_params": {},
      "response_fields": ["total_pnl", "total_pnl_percentage", "positions", "current_portfolio_value"]
    },
    "market_gainers": {
      "method": "GET",
      "path": "/api/v1/market/gainers",
      "required_params": [],
      "optional_params": {
        "limit": 20
      },
      "response_fields": ["data", "timestamp"]
    },
    "market_losers": {
      "method": "GET", 
      "path": "/api/v1/market/losers",
      "required_params": [],
      "optional_params": {
        "limit": 20
      },
      "response_fields": ["data", "timestamp"]
    },
    "technical_indicators": {
      "method": "POST",
      "path": "/api/v1/technical/indicators", 
      "required_params": ["data"],
      "optional_params": {},
      "response_fields": ["bollinger_bands", "macd", "rsi", "signals"]
    },
    "risk_position_size": {
      "method": "POST",
      "path": "/api/v1/risk/calculate-position-size",
      "required_params": ["portfolio_value", "entry_price", "stop_loss"],
      "optional_params": {
        "risk_per_trade": 0.02,
        "risk_tolerance": "MEDIUM"
      },
      "response_fields": ["recommended_shares", "position_value", "risk_amount"]
    }
  },
  "websocket": {
    "url": "ws://localhost:8000/ws",
    "actions": {
      "subscribe": {
        "action": "subscribe",
        "symbol": "RELIANCE"
      },
      "unsubscribe": {
        "action": "unsubscribe", 
        "symbol": "RELIANCE"
      }
    }
  },
  "common_symbols": [
    "RELIANCE", "TCS", "HDFC", "INFY", "ICICIBANK", "KOTAKBANK", 
    "HDFCBANK", "BHARTIARTL", "ITC", "SBIN", "LT", "ASIANPAINT",
    "MARUTI", "AXISBANK", "BAJFINANCE", "HCLTECH", "WIPRO", "ULTRACEMCO"
  ],
  "time_intervals": [1, 3, 5, 15, 30, 60, 240, 1440],
  "risk_tolerance_levels": ["LOW", "MEDIUM", "HIGH"],
  "decision_types": ["BUY", "SELL", "HOLD"],
  "confidence_range": [0, 100],
  "rate_limits": {
    "ai_endpoints": "50 requests/minute",
    "market_data": "200 requests/minute", 
    "websocket": "10 connections/IP"
  },
  "error_codes": {
    "INSUFFICIENT_DATA": "Need more historical data points",
    "INVALID_SYMBOL": "Stock symbol not found",
    "PORTFOLIO_NOT_FOUND": "Portfolio ID does not exist",
    "RATE_LIMIT_EXCEEDED": "Too many requests"
  }
}